---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PostCard from '../components/PostCard.astro';
import TagPill from '../components/TagPill.astro';
import { getCollection } from 'astro:content';

// Get all notes
const notes = await getCollection('notes');

// Filter featured and published notes
const featuredNotes = notes.filter(note =>
  note.data.featured && note.data.stage === 'published'
);

const publishedNotes = notes.filter(note =>
  note.data.stage === 'published' || !note.data.stage
);

// Get latest notes (excluding featured ones that are already shown)
const latestNotes = publishedNotes
  .filter(note => !note.data.featured)
  .sort((a, b) => {
    const dateA = a.data.pubDate ? new Date(a.data.pubDate).getTime() : 0;
    const dateB = b.data.pubDate ? new Date(b.data.pubDate).getTime() : 0;
    return dateB - dateA;
  })
  .slice(0, 6);

// Get all unique tags
const allTags = [...new Set(notes.flatMap(note => note.data.tags || []))].sort();

// Get recent tags (most used)
const tagCounts = allTags.map(tag => ({
  tag,
  count: notes.filter(note => note.data.tags?.includes(tag)).length
})).sort((a, b) => b.count - a.count).slice(0, 10);

const description = "Personal notes, thoughts, and discoveries. A clean, elegant space for ideas and learning.";
---

<Layout title="Home" description={description}>
  <Header />

  <main id="main" class="container mx-auto px-4 py-16">
    <!-- Hero Section - Elegant -->
    <section class="text-center mb-24 max-w-4xl mx-auto">
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-serif font-bold text-[var(--text-primary)] mb-6 leading-tight">
        Welcome to my
        <span class="text-[var(--accent)] block mt-2">Notes</span>
      </h1>
      <p class="text-xl md:text-2xl text-[var(--text-secondary)] max-w-3xl mx-auto mb-10 leading-relaxed">
        A personal space for thoughts, ideas, and discoveries. Built with care, designed for clarity.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/notes" class="px-8 py-3.5 bg-[var(--accent)] text-white rounded-full hover:bg-[var(--accent-hover)] transition-all font-medium shadow-elegant-sm hover:shadow-elegant inline-flex items-center">
          Browse Notes
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
        <a href="/tags" class="px-8 py-3.5 bg-transparent text-[var(--accent)] border-2 border-[var(--accent)] rounded-full hover:bg-[var(--accent)] hover:text-white transition-all font-medium">
          Explore Tags
        </a>
        <a href="/search" class="px-8 py-3.5 bg-[var(--muted)] text-[var(--text-primary)] rounded-full hover:bg-[var(--accent-light)] hover:text-[var(--accent)] transition-all font-medium">
          Search
        </a>
      </div>
    </section>

    <!-- Decorative Divider -->
    <div class="relative mb-20">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-[var(--border-light)]"></div>
      </div>
      <div class="relative flex justify-center">
        <span class="bg-[var(--bg)] px-6 text-[var(--accent)] text-2xl">â—†</span>
      </div>
    </div>

    <!-- Featured Notes - Elegant -->
    {featuredNotes.length > 0 && (
      <section class="mb-24">
        <div class="flex items-center justify-between mb-10">
          <h2 class="text-4xl md:text-5xl font-serif font-bold text-[var(--text-primary)]">
            Featured Notes
          </h2>
          <a href="/notes" class="text-[var(--accent)] hover:text-[var(--accent-hover)] font-medium inline-flex items-center transition-colors">
            View all
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {featuredNotes.slice(0, 4).map(note => (
            <PostCard slug={note.slug} featured={true} />
          ))}
        </div>
      </section>
    )}

    <!-- Latest Notes - Elegant -->
    {latestNotes.length > 0 && (
      <section class="mb-24">
        <div class="flex items-center justify-between mb-10">
          <h2 class="text-4xl md:text-5xl font-serif font-bold text-[var(--text-primary)]">
            Latest Notes
          </h2>
          <a href="/notes" class="text-[var(--accent)] hover:text-[var(--accent-hover)] font-medium inline-flex items-center transition-colors">
            View all
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {latestNotes.map(note => (
            <PostCard slug={note.slug} />
          ))}
        </div>
      </section>
    )}

    <!-- Popular Tags - Elegant -->
    {tagCounts.length > 0 && (
      <section class="mb-24">
        <div class="flex items-center justify-between mb-10">
          <h2 class="text-4xl md:text-5xl font-serif font-bold text-[var(--text-primary)]">
            Popular Topics
          </h2>
          <a href="/tags" class="text-[var(--accent)] hover:text-[var(--accent-hover)] font-medium inline-flex items-center transition-colors">
            View all
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
        <div class="flex flex-wrap gap-3">
          {tagCounts.map(({ tag, count }) => (
            <TagPill tag={`${tag} (${count})`} href={`/tags/${tag}`} size="md" />
          ))}
        </div>
      </section>
    )}

    <!-- Stats - Elegant -->
    <section class="bg-gradient-to-br from-[var(--accent-light)] to-[var(--muted)] border-2 border-[var(--accent-soft)] rounded-3xl p-12 text-center shadow-elegant-lg">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        <div class="group">
          <div class="text-6xl font-serif font-bold text-[var(--accent)] mb-3 group-hover:scale-110 transition-transform">
            {notes.length}
          </div>
          <div class="text-[var(--text-secondary)] font-medium text-lg">
            Total Notes
          </div>
        </div>
        <div class="group">
          <div class="text-6xl font-serif font-bold text-[var(--accent)] mb-3 group-hover:scale-110 transition-transform">
            {allTags.length}
          </div>
          <div class="text-[var(--text-secondary)] font-medium text-lg">
            Topics
          </div>
        </div>
        <div class="group">
          <div class="text-6xl font-serif font-bold text-[var(--accent)] mb-3 group-hover:scale-110 transition-transform">
            {featuredNotes.length}
          </div>
          <div class="text-[var(--text-secondary)] font-medium text-lg">
            Featured
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
