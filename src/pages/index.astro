---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PostCard from '../components/PostCard.astro';
import TagPill from '../components/TagPill.astro';
import { getCollection } from 'astro:content';

// Get all notes
const notes = await getCollection('notes');

// Filter featured and published notes
const featuredNotes = notes.filter(note =>
  note.data.featured && note.data.stage === 'published'
);

const publishedNotes = notes.filter(note =>
  note.data.stage === 'published' || !note.data.stage
);

// Get latest notes (excluding featured ones that are already shown)
const latestNotes = publishedNotes
  .filter(note => !note.data.featured)
  .sort((a, b) => {
    const dateA = a.data.pubDate ? new Date(a.data.pubDate).getTime() : 0;
    const dateB = b.data.pubDate ? new Date(b.data.pubDate).getTime() : 0;
    return dateB - dateA;
  })
  .slice(0, 6);

// Get all unique tags
const allTags = [...new Set(notes.flatMap(note => note.data.tags || []))].sort();

// Get recent tags (most used)
const tagCounts = allTags.map(tag => ({
  tag,
  count: notes.filter(note => note.data.tags?.includes(tag)).length
})).sort((a, b) => b.count - a.count).slice(0, 10);

const description = "Personal notes, thoughts, and discoveries. A clean, elegant space for ideas and learning.";
---

<Layout title="Home" description={description}>
  <Header />

  <main id="main" class="container mx-auto px-4 py-12">
    <!-- Hero Section - Brutalist -->
    <section class="text-left mb-24 border-[5px] border-[var(--fg)] p-12 relative">
      <div class="absolute top-0 left-0 w-full h-full border-[5px] border-[var(--fg)] transform translate-x-3 translate-y-3 -z-10"></div>
      
      <h1 class="text-5xl md:text-7xl lg:text-8xl font-black uppercase tracking-tighter text-[var(--fg)] mb-6 leading-none">
        Welcome to<br/>
        <span class="text-[var(--accent)] inline-block border-[5px] border-[var(--fg)] px-4 py-2 mt-2">[NOTES]</span>
      </h1>
      <p class="text-xl md:text-2xl text-[var(--fg)] font-bold uppercase tracking-wide max-w-3xl mb-8 leading-relaxed">
        A personal space for thoughts, ideas, and discoveries. Built with Astro, designed for clarity.
      </p>
      <div class="flex flex-wrap gap-4 mb-0">
        <a href="/notes" class="px-8 py-4 bg-[var(--fg)] text-[var(--bg)] border-[3px] border-[var(--fg)] font-black uppercase tracking-wider hover:bg-[var(--bg)] hover:text-[var(--fg)] inline-block">
          Browse Notes →
        </a>
        <a href="/tags" class="px-8 py-4 bg-[var(--accent)] text-[var(--bg)] border-[3px] border-[var(--fg)] font-black uppercase tracking-wider hover:bg-[var(--bg)] hover:text-[var(--fg)] inline-block">
          Explore Tags
        </a>
        <a href="/search" class="px-8 py-4 bg-[var(--bg)] text-[var(--fg)] border-[3px] border-[var(--fg)] font-black uppercase tracking-wider hover:bg-[var(--fg)] hover:text-[var(--bg)] inline-block">
          Search
        </a>
      </div>
    </section>

    <!-- Featured Notes - Brutalist -->
    {featuredNotes.length > 0 && (
      <section class="mb-24">
        <div class="flex items-center justify-between mb-8 border-b-[5px] border-[var(--fg)] pb-4">
          <h2 class="text-4xl md:text-5xl font-black uppercase tracking-tighter text-[var(--fg)]">
            [Featured Notes]
          </h2>
          <a href="/notes" class="text-[var(--fg)] font-bold uppercase text-sm border-[3px] border-[var(--fg)] px-4 py-2 hover:bg-[var(--fg)] hover:text-[var(--bg)]">
            View All →
          </a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {featuredNotes.slice(0, 4).map(note => (
            <PostCard slug={note.slug} featured={true} />
          ))}
        </div>
      </section>
    )}

    <!-- Latest Notes - Brutalist -->
    {latestNotes.length > 0 && (
      <section class="mb-24">
        <div class="flex items-center justify-between mb-8 border-b-[5px] border-[var(--fg)] pb-4">
          <h2 class="text-4xl md:text-5xl font-black uppercase tracking-tighter text-[var(--fg)]">
            [Latest Notes]
          </h2>
          <a href="/notes" class="text-[var(--fg)] font-bold uppercase text-sm border-[3px] border-[var(--fg)] px-4 py-2 hover:bg-[var(--fg)] hover:text-[var(--bg)]">
            View All →
          </a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {latestNotes.map(note => (
            <PostCard slug={note.slug} />
          ))}
        </div>
      </section>
    )}

    <!-- Popular Tags - Brutalist -->
    {tagCounts.length > 0 && (
      <section class="mb-24">
        <div class="flex items-center justify-between mb-8 border-b-[5px] border-[var(--fg)] pb-4">
          <h2 class="text-4xl md:text-5xl font-black uppercase tracking-tighter text-[var(--fg)]">
            [Popular Topics]
          </h2>
          <a href="/tags" class="text-[var(--fg)] font-bold uppercase text-sm border-[3px] border-[var(--fg)] px-4 py-2 hover:bg-[var(--fg)] hover:text-[var(--bg)]">
            View All →
          </a>
        </div>
        <div class="flex flex-wrap gap-3">
          {tagCounts.map(({ tag, count }) => (
            <TagPill tag={`${tag} (${count})`} href={`/tags/${tag}`} size="md" />
          ))}
        </div>
      </section>
    )}

    <!-- Stats - Brutalist -->
    <section class="bg-[var(--accent)] border-[5px] border-[var(--fg)] p-12 text-center relative">
      <div class="absolute top-0 left-0 w-full h-full border-[5px] border-[var(--fg)] transform translate-x-3 translate-y-3 -z-10 bg-[var(--bg)]"></div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        <div>
          <div class="text-6xl font-black text-[var(--bg)] mb-3 uppercase">
            {notes.length}
          </div>
          <div class="text-[var(--bg)] font-black uppercase tracking-wider text-lg">
            Total Notes
          </div>
        </div>
        <div>
          <div class="text-6xl font-black text-[var(--bg)] mb-3 uppercase">
            {allTags.length}
          </div>
          <div class="text-[var(--bg)] font-black uppercase tracking-wider text-lg">
            Topics
          </div>
        </div>
        <div>
          <div class="text-6xl font-black text-[var(--bg)] mb-3 uppercase">
            {featuredNotes.length}
          </div>
          <div class="text-[var(--bg)] font-black uppercase tracking-wider text-lg">
            Featured
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  a, button {
    transition: none;
  }
  
  a:hover, button:hover {
    transform: translate(-2px, -2px);
    box-shadow: 2px 2px 0 var(--fg);
  }
</style>
