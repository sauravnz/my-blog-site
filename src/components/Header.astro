---
import ThemeToggle from './ThemeToggle.astro';
---

<header class="sticky top-0 z-40 w-full border-b-[3px] border-[var(--fg)] bg-[var(--bg)]">
  <div class="container mx-auto px-4 py-6">
    <div class="flex items-center justify-between">
      <!-- Logo/Brand - Brutalist -->
      <a href="/" class="text-3xl md:text-4xl font-black uppercase tracking-tighter text-[var(--fg)] hover:bg-[var(--accent)] hover:text-[var(--bg)] px-2 py-1 border-[3px] border-transparent hover:border-[var(--fg)]">
        [NOTES]
      </a>

      <!-- Navigation - Brutalist -->
      <nav class="hidden md:flex items-center space-x-2">
        <a href="/" class="px-4 py-2 text-[var(--fg)] hover:bg-[var(--fg)] hover:text-[var(--bg)] font-bold uppercase text-sm border-[2px] border-transparent hover:border-[var(--fg)]">
          Home
        </a>
        <a href="/notes" class="px-4 py-2 text-[var(--fg)] hover:bg-[var(--fg)] hover:text-[var(--bg)] font-bold uppercase text-sm border-[2px] border-transparent hover:border-[var(--fg)]">
          Notes
        </a>
        <a href="/tags" class="px-4 py-2 text-[var(--fg)] hover:bg-[var(--fg)] hover:text-[var(--bg)] font-bold uppercase text-sm border-[2px] border-transparent hover:border-[var(--fg)]">
          Tags
        </a>
        <a href="/search" class="px-4 py-2 text-[var(--fg)] hover:bg-[var(--fg)] hover:text-[var(--bg)] font-bold uppercase text-sm border-[2px] border-transparent hover:border-[var(--fg)]">
          Search
        </a>
        <a href="/about" class="px-4 py-2 text-[var(--fg)] hover:bg-[var(--fg)] hover:text-[var(--bg)] font-bold uppercase text-sm border-[2px] border-transparent hover:border-[var(--fg)]">
          About
        </a>
        <a href="/projects" class="px-4 py-2 text-[var(--fg)] hover:bg-[var(--fg)] hover:text-[var(--bg)] font-bold uppercase text-sm border-[2px] border-transparent hover:border-[var(--fg)]">
          Projects
        </a>
        <a href="/connect" class="px-4 py-2 bg-[var(--accent)] text-[var(--bg)] hover:bg-[var(--fg)] hover:text-[var(--bg)] font-black uppercase text-sm border-[2px] border-[var(--fg)]">
          Connect
        </a>
      </nav>

      <!-- Theme Toggle and Mobile Menu -->
      <div class="flex items-center space-x-4">
        <ThemeToggle />

        <!-- Mobile menu button - Brutalist -->
        <button
          id="mobile-menu-button"
          class="md:hidden p-3 border-[3px] border-[var(--fg)] hover:bg-[var(--fg)] hover:text-[var(--bg)]"
          aria-label="Toggle mobile menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3">
            <path stroke-linecap="square" stroke-linejoin="miter" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation - Brutalist -->
    <nav id="mobile-menu" class="hidden md:hidden mt-6 pb-4 border-t-[3px] border-[var(--fg)]">
      <div class="flex flex-col space-y-2 pt-6">
        <a href="/" class="px-4 py-3 text-[var(--fg)] hover:bg-[var(--fg)] hover:text-[var(--bg)] font-bold uppercase border-[2px] border-[var(--fg)]">
          Home
        </a>
        <a href="/notes" class="px-4 py-3 text-[var(--fg)] hover:bg-[var(--fg)] hover:text-[var(--bg)] font-bold uppercase border-[2px] border-[var(--fg)]">
          Notes
        </a>
        <a href="/tags" class="px-4 py-3 text-[var(--fg)] hover:bg-[var(--fg)] hover:text-[var(--bg)] font-bold uppercase border-[2px] border-[var(--fg)]">
          Tags
        </a>
        <a href="/search" class="px-4 py-3 text-[var(--fg)] hover:bg-[var(--fg)] hover:text-[var(--bg)] font-bold uppercase border-[2px] border-[var(--fg)]">
          Search
        </a>
        <a href="/about" class="px-4 py-3 text-[var(--fg)] hover:bg-[var(--fg)] hover:text-[var(--bg)] font-bold uppercase border-[2px] border-[var(--fg)]">
          About
        </a>
        <a href="/projects" class="px-4 py-3 text-[var(--fg)] hover:bg-[var(--fg)] hover:text-[var(--bg)] font-bold uppercase border-[2px] border-[var(--fg)]">
          Projects
        </a>
        <a href="/connect" class="px-4 py-3 bg-[var(--accent)] text-[var(--bg)] hover:bg-[var(--fg)] font-black uppercase border-[2px] border-[var(--fg)]">
          Connect
        </a>
      </div>
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });

    // Close mobile menu when clicking outside
    document.addEventListener('click', (e) => {
      if (!mobileMenuButton.contains(e.target as Node) && !mobileMenu.contains(e.target as Node)) {
        mobileMenu.classList.add('hidden');
      }
    });
  }
</script>
