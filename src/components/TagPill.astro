---
export interface Props {
  tag: string;
  href?: string;
  size?: 'sm' | 'md' | 'lg';
  variant?: 'default' | 'outline';
}

const { tag, href, size = 'md', variant = 'default' } = Astro.props;

const sizeClasses = {
  sm: 'px-2 py-1 text-xs',
  md: 'px-3 py-1 text-sm',
  lg: 'px-4 py-2 text-base',
};

const variantClasses = {
  default: 'bg-[var(--muted)] text-[var(--fg)] hover:bg-[var(--accent)] hover:text-white',
  outline: 'border border-[var(--muted)] text-[var(--fg)] hover:border-[var(--accent)] hover:text-[var(--accent)]',
};

const classes = `inline-flex items-center rounded-full font-medium transition-colors ${sizeClasses[size]} ${variantClasses[variant]}`;
---

{href ? (
  <a href={href} class={classes}>
    {tag}
  </a>
) : (
  <span class={classes}>
    {tag}
  </span>
)}

