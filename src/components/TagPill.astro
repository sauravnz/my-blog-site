---
export interface Props {
  tag: string;
  href?: string;
  size?: 'sm' | 'md' | 'lg';
  variant?: 'default' | 'outline';
}

const { tag, href, size = 'md', variant = 'default' } = Astro.props;

const sizeClasses = {
  sm: 'px-2 py-1 text-xs',
  md: 'px-3 py-1.5 text-sm',
  lg: 'px-4 py-2 text-base',
};

const variantClasses = {
  default: 'bg-[var(--bg)] text-[var(--fg)] border-[2px] border-[var(--fg)] hover:bg-[var(--fg)] hover:text-[var(--bg)]',
  outline: 'bg-transparent text-[var(--fg)] border-[2px] border-[var(--fg)] hover:bg-[var(--accent)] hover:text-[var(--bg)] hover:border-[var(--fg)]',
};

const classes = `inline-flex items-center font-bold uppercase tracking-wide ${sizeClasses[size]} ${variantClasses[variant]}`;
---

{href ? (
  <a href={href} class={classes}>
    #{tag}
  </a>
) : (
  <span class={classes}>
    #{tag}
  </span>
)}

<style>
  a, span {
    transition: none;
  }
</style>
