---
export interface Props {
  type?: 'note' | 'tip' | 'warn';
  title?: string;
  children: any;
}

const { type = 'note', title, children } = Astro.props;

const typeClasses = {
  note: 'border-blue-500 bg-blue-50 dark:bg-blue-950/20 dark:border-blue-400',
  tip: 'border-green-500 bg-green-50 dark:bg-green-950/20 dark:border-green-400',
  warn: 'border-yellow-500 bg-yellow-50 dark:bg-yellow-950/20 dark:border-yellow-400',
};

const iconPaths = {
  note: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  tip: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
  warn: 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z',
};
---

<div class={`callout callout-${type} rounded-lg border-l-4 p-4 my-4`}>
  {title && (
    <div class="flex items-center mb-2">
      <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[type]}></path>
      </svg>
      <h4 class="font-semibold text-[var(--fg)]">{title}</h4>
    </div>
  )}
  <div class="text-[var(--fg)] opacity-90">
    <slot />
  </div>
</div>

