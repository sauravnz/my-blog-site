---
import { getCollection } from 'astro:content';
import TagPill from './TagPill.astro';

export interface Props {
  slug: string;
  featured?: boolean;
  className?: string;
}

const { slug, featured = false, className = '' } = Astro.props;

// Get the note data
const notes = await getCollection('notes');
const note = notes.find(n => n.slug === slug);

if (!note) {
  throw new Error(`Note with slug "${slug}" not found`);
}

const { title, description, pubDate, tags } = note.data;
const formattedDate = pubDate ? new Date(pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}) : null;

const cardClasses = featured
  ? 'bg-[var(--bg)] border-[5px] border-[var(--fg)] p-8 hover-brutalist'
  : 'bg-[var(--bg)] border-[3px] border-[var(--fg)] p-6 hover-brutalist';
---

<article class={`${cardClasses} ${className} relative`}>
  <div class="flex flex-col h-full">
    <!-- Header - Brutalist -->
    <header class="mb-4">
      <div class="flex items-start justify-between mb-3">
        <h3 class={featured ? "text-3xl font-black uppercase tracking-tighter text-[var(--fg)]" : "text-2xl font-black uppercase tracking-tighter text-[var(--fg)]"}>
          <a href={`/notes/${slug}`} class="hover:text-[var(--accent)] border-b-[3px] border-transparent hover:border-[var(--accent)]">
            {title}
          </a>
        </h3>
        {featured && (
          <span class="ml-3 px-3 py-1 text-xs bg-[var(--accent)] text-[var(--bg)] font-black uppercase tracking-wider border-[2px] border-[var(--fg)]">
            â˜… Featured
          </span>
        )}
      </div>

      {description && (
        <p class="text-[var(--fg)] text-sm mb-4 line-clamp-2 font-medium">
          {description}
        </p>
      )}

      {formattedDate && (
        <time class="text-xs text-[var(--fg)] font-bold uppercase tracking-wider border-[2px] border-[var(--fg)] px-2 py-1 inline-block" datetime={pubDate}>
          [{formattedDate}]
        </time>
      )}
    </header>

    <!-- Tags - Brutalist -->
    {tags && tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mt-auto pt-4 border-t-[2px] border-[var(--fg)]">
        {tags.slice(0, 3).map(tag => (
          <TagPill tag={tag} href={`/tags/${tag}`} size="sm" />
        ))}
        {tags.length > 3 && (
          <span class="text-xs text-[var(--fg)] font-bold uppercase self-center px-2 py-1 border-[2px] border-[var(--fg)]">
            +{tags.length - 3}
          </span>
        )}
      </div>
    )}
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .hover-brutalist {
    transition: none;
  }
  
  .hover-brutalist:hover {
    transform: translate(-6px, -6px);
    box-shadow: 6px 6px 0 var(--fg);
  }
</style>
